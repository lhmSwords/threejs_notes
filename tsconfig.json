{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "@/router/*": ["./src/router/*"],
      "@/plugins/*": ["./src/plugins/*"],
      "@/shared/*": ["./src/shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
